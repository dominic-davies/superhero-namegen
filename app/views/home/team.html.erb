<div class="card mt-5">
  <h5 class="card-header">
    <% if @team_number > 0 %>
      Your Superhero Team...
    <% else %>
      How Many Team Members Do You Want?
    <% end %>
  </h5>
  <div class="card-body">
    <% if @team_number > 0 %>
       <%= render 'home/show_team' %>
    <% else %>
      <%= render 'home/create_team' %>
    <% end %>
  </div>
</div>
  <div class="card-footer text-muted">
    <%= link_to 'Create A Whole Superhero Team', home_team_path, class: "card-link" %>
  </div>
</div>